<div class="card">
  <div class="card-header">
    <h2>Cadastrar-se</h2>
  </div>
  <div class="card-body">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      
      <div class="field form-group">
        <%= f.text_field :nome, autofocus: true, class: "form-control", placeholder: "Nome"  %>
      </div>

      <div class="field form-group">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "email" %>
      </div>

      <div class="field form-group">
        <% if @minimum_password_length %>
        <em>(MÃ­nimo de <%= @minimum_password_length %> caracteres)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "Senha" %>
      </div>

      <div class="field form-group">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "Confirmar senha" %>
      </div>

      <div class="actions">
        <%= f.submit "Cadastrar-se", data: {turbo: false}, class: "btn btn-info" %>
      </div>
    <% end %>

    <br/>

    <%= render "devise/shared/links" %>
  </div>
</div>



